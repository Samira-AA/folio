---
import NavBar from '../components/navbar.astro'
import Name from '../components/presentation.astro'

const currentUrl= new URL(Astro.request.url);

const currentPage = currentUrl.pathname

type AlignmentType = {
    [key: string]: string;
} 

const alignment: AlignmentType = {
    '/': 'center',
	'/contact/': 'center',
} as const;

const dynamicAlign= alignment[currentPage] || 'flex-end';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
		<title>Samira Alvarez</title>
	</head>
	<body>
		<div class="frame">
			<div class="name">
				<Name></Name>
			</div>
			
			<div class="content" style={`align-items: ${dynamicAlign} !important`}>
				<slot/>

			</div>
			
			<div class="menu">
				<NavBar></NavBar>
			</div>
			
		</div>
		
		
	</body>
</html>

<style is:global>

	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}

	html{
		background-image: linear-gradient(#181818 2px, transparent 2px), linear-gradient(to right, #181818 2px, transparent 2px);
		background-size: 43px 43px;
		background-color: #141414;
		overflow: hidden;
	}

	.frame{
		display: grid;
		height: 90vh;
		margin: 50px;
		border:1px solid #fff;
		color:#fff;
		font-family: "Inter", Arial, Helvetica, sans-serif;
		padding:40px 35px 0 35px;
 
		grid-template-columns: auto 1fr;
		grid-template-rows:auto 1fr auto;
		grid-template-areas:
		'name content'
		'. content'
		'menu content';
		
	}

	/* sm: 640px and below */
    @media (max-width: 639px) {
		
		html{
			overflow:scroll;
		}
		.frame{
			grid-template-areas:
			'name .'
			'content content'
			'menu menu';

			padding:30px 0px 0 0px;
			margin: 25px;
			position: relative;
		}

		.menu{
			position: fixed;
			bottom: 10px;
			left: 50%;
			transform: translateX(-50%); 
			width: 98%;
		}
		
	}

	.space{
		grid-area: space;
	}

	.menu{
		grid-area: menu;
	}

	.content{
		grid-area:content;
		display:flex;
        justify-content: center;
	}
	
	.name{
		grid-area: name;
		
	}

	a,
	a:link,
	a:visited,
	a:hover,
	a:active {
		color: inherit;
		text-decoration: inherit;
		font-weight: inherit;	
		}
</style>
