---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="content">
        <p class="fade-in-up">
            Hola! Iâ€™m a <span class="stack">FullStack</span> developer based in Lima.
            <a href="/about/"><span class="more-info">Read more</span></a>
        </p>

        <div class="buttons fade-in-up">
            <a href="/contact/">
                <button class="contact-button">Contact Me</button>
            </a>

            <a href="/src/documents/Samira-Alvarez-CV-en.pdf" download>
                <button class="download-button">Download CV</button>
            </a>
        </div>
    </div>
</Layout>

<style>
    
    .more-info {
        font-size: 20px;
        font-weight: 300;
        text-decoration: underline 0.5px #fd6900;
        text-underline-offset: 2px;
        cursor: pointer;
        white-space: nowrap;
    }

    .content {
        padding: 20px;
        display: flex;
        align-items: flex-start;
        flex-direction: column;
    }

    .content p {
        font-size: 70px;
        font-weight: bold;
    }

    .stack {
        color: #10ea33;
    }

    .buttons {
        margin-top: 60px;
    }

    button {
        color: #fff;
        padding: 18px 40px;
        border-radius: 15px;
        font-size: 20px;
        cursor: pointer;
    }

    .contact-button {
        background-color: #0269f4;
        border: 0;
        margin-right: 50px;
        transition: background-color 0.3s ease;
    }

    .contact-button:hover{
        background-color: #0156bd;
    }

    .download-button {
        background-color: #e900ff;
        border: 0;
        transition: background-color 0.3s ease;
    }

    .download-button:hover{
        background-color: #ad00c0;
    }

    /* 2xl: 1536px and below */
    @media (max-width: 1522px) {
        .more-info {
            display: flex;
            margin-top: 20px;
        }
    }

    /* xl: 1280px and below */
    @media (max-width: 1279px) {
        .content p {
            font-size: 45px;
            font-weight: bold;
        }

        .content {
            padding: 15px;
        }
    }

    /* lg: 1024px and below */
    @media (max-width: 1023px) {
    }

    /* 950px and below */
    @media (max-width: 949px) {
        .content p {
            font-size: 40px;
            font-weight: bold;
        }

        .content {
            padding: 15px;
        }

        button {
            flex-wrap: wrap;
            color: #fff;
            padding: 18px 40px;
            border-radius: 15px;
            font-size: 15px;
            cursor: pointer;
        }
    }

    /* 860px and below */
    @media (max-width: 859px) {
        .buttons {
            display: flex;
            flex-wrap: wrap;
        }

        button {
            display: flex;
            justify-content: center;
            color: #fff;
            width: 150px;
            white-space: nowrap;
            border-radius: 15px;
            font-size: 15px;
            cursor: pointer;
            margin-bottom: 20px;
        }
    }

    /* md: 768px and below */
    @media (max-width: 767px) {
    }

    /* sm: 640px and below */
    @media (max-width: 639px) {
        .content {
            padding: 25px;
        }
        .content p {
            font-size: 30px;
        }

        button {
            padding: 15px;
            font-size: 15px;
        }
    }


    .fade-in-up {
        opacity: 0; 
        animation: fadeInUp 1s ease-out forwards;
    }

   
    .buttons.fade-in-up {
        animation-delay: 0.5s; 
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

</style>